<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/sda</item>
    </style>
    <style name="ClickableImageView">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="checkBox" parent="AppTheme">
        <item name="colorAccent">@color/blue</item>  // for checked
        <item name="android:textColorSecondary">@android:color/darker_gray</item>  // for unchecked
    </style>
    <style name="Custom" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">جارى النشر</item>
        <item name="DialogSpotColor">@color/blue</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="addEmployee" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">جارى إضافة موظف</item>
        <item name="DialogSpotColor">@color/blue</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="getData" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">جارى تحميل البيانات</item>
        <item name="DialogSpotColor">@color/blue</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="upload" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">جارى معالجة الطلب</item>
        <item name="DialogSpotColor">@color/blue</item>
        <item name="DialogSpotCount">4</item>
    </style>
    <style name="login" parent="Theme.AppCompat.Light.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">جارى الدخول كمدير</item>
        <item name="DialogSpotColor">@color/blue</item>
        <item name="DialogSpotCount">4</item>
    </style>
</resources>
