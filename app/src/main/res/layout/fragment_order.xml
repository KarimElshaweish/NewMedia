<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.OrderFragment">

    <ScrollView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/soundControl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout

                        android:layout_width="150dp"
                        android:background="@drawable/btn_graident"
                        android:layout_height="180dp">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="7dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:id="@+id/musicImage"
                            android:src="@drawable/music_bg"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/musicImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التسجيل الصوتى"
                            android:fontFamily="@font/merssi_semibold"
                            android:textColor="#000"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/photograpger_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:background="@drawable/graident_2"
                        android:layout_height="180dp">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginTop="20dp"
                            android:layout_margin="7dp"
                            android:id="@+id/photoImage"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/photgrapher_dag"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/photoImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="التصوير"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/merssi_semibold"
                            android:textColor="#000"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="35dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/theater_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="150dp"
                        android:background="@drawable/gradent_3"
                        android:layout_height="180dp">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_centerHorizontal="true"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_margin="7dp"
                            android:id="@+id/theaterImage"
                            android:src="@drawable/theater_bag"/>
                        <TextView
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/theaterImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المسارح والشاشات"
                            android:fontFamily="@font/merssi_semibold"
                            android:textColor="#000"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="35dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/montag_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="150dp"
                        android:background="@drawable/gradient_4"
                        android:layout_height="180dp">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/montagImage"
                            android:layout_margin="7dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/montag_bag"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="المونتاج"
                            android:layout_marginTop="20dp"
                            android:layout_below="@id/montagImage"
                            android:fontFamily="@font/merssi_semibold"
                            android:textColor="#000"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="35dp"/>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_margin="7dp"
            android:layout_width="match_parent"
            android:id="@+id/table"
            android:layout_height="wrap_content">

            <TableRow android:background="#14B2BB">
                <TextView android:layout_weight="1"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="طريقة الدفع"
                    android:fontFamily="@font/merssi_req"/>
                <TextView android:layout_weight="1"
                    android:text="العناصر"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/merssi_req"/>
                <TextView android:layout_weight="1"
                    android:text="السعر"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/merssi_req"/>
                <TextView android:layout_weight="1"
                    android:text="إسم العميل"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/merssi_req"/>
            </TableRow>
        </TableLayout>
    </ScrollView>

</FrameLayout>