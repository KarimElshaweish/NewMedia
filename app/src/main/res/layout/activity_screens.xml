<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.TheaterAndScreens.ScreensActivity">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="شاشات"
            android:fontFamily="@font/sda"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:padding="7dp"/>
        <ImageView
            android:onClick="finish"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_left_arrow"
            android:layout_centerVertical="true"
            android:padding="7dp"/>
    </RelativeLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  سعر المتر بالريال"
            android:fontFamily="@font/sda"
            android:textColor="#000"/>
        <EditText
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:textCursorDrawable="@drawable/coursor"
            android:id="@+id/meterPriceText"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_offline"/>
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  مجموع الأمتار"
            android:fontFamily="@font/sda"
            android:textColor="#000"/>
        <EditText
            android:textCursorDrawable="@drawable/coursor"
            android:text="0"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/meterSumText"
            android:inputType="numberDecimal"
            android:padding="5dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/border_offline"/>
        <TextView
            android:id="@+id/priceTotal"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="السعر النهائى : 0 ريال"
            android:fontFamily="@font/sda"/>
    </LinearLayout>
    <com.robertlevonyan.views.customfloatingactionbutton.FloatingActionButton
        android:id="@+id/add_fab"
        android:onClick="btnClicked"
        app:fabIcon="@drawable/ic_add"
        android:text="إضافة إلى السلة"
        android:fontFamily="@font/sda"
        android:textColor="#fff"
        app:fabColor="@color/blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"/>
</RelativeLayout>