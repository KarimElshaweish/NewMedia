<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activites.Basket.PhotoAndSoundBasket">
    <ScrollView
        android:visibility="visible"
        android:id="@+id/bsketFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="الباقات المضافة"
                android:fontFamily="@font/merssi_bold"
                android:textColor="#000"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="7dp"/>
            <TextView
                android:id="@+id/noPk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="لاتوجد باقات مضافة"
                android:fontFamily="@font/merssi_req"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:id="@+id/rv"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="إسم العميل"
                        android:fontFamily="@font/merssi_bold"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                    <EditText
                        android:textCursorDrawable="@drawable/coursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_offline"
                        android:padding="7dp"
                        android:textSize="17sp"
                        android:hint="إسم العميل"
                        android:id="@+id/clientName"
                        android:fontFamily="@font/merssi_semibold"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="طريقة الدفع"
                        android:fontFamily="@font/merssi_bold"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                    <EditText
                        android:textCursorDrawable="@drawable/coursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_offline"
                        android:padding="7dp"
                        android:textSize="17sp"
                        android:hint="طريقة الدفع"
                        android:id="@+id/moneyGetWay"
                        android:fontFamily="@font/merssi_semibold"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="موقع العمل"
                        android:fontFamily="@font/merssi_bold"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                    <EditText
                        android:textCursorDrawable="@drawable/coursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_offline"
                        android:padding="7dp"
                        android:textSize="17sp"
                        android:hint="موقع العمل"
                        android:id="@+id/workLocation"
                        android:fontFamily="@font/merssi_semibold"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="رقم الجوال"
                        android:fontFamily="@font/merssi_bold"
                        android:textColor="#000"
                        android:padding="7dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="right"
                        android:gravity="right"/>
                    <EditText
                        android:textCursorDrawable="@drawable/coursor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_offline"
                        android:padding="7dp"
                        android:textSize="17sp"
                        android:hint="رقم الجوال"
                        android:inputType="phone"
                        android:id="@+id/phoneNumber"
                        android:fontFamily="@font/merssi_semibold"
                        android:layout_margin="10dp"/>

                    <Button
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_online"
                        android:text="إصدار المستند"
                        android:fontFamily="@font/merssi_bold"
                        android:textColor="#fff"
                        android:layout_gravity="center"
                        android:layout_margin="7dp"
                        android:padding="10dp"
                        android:id="@+id/print_pdf"/>
                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fullReportOption">
        <include layout="@layout/sound_report"/>
        <include layout="@layout/photo_report"/>

    </LinearLayout>

</LinearLayout>