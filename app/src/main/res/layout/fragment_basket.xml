            <include layout="@layout/photo_report" android:id="@+id/photoReportView"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_online"
                android:text="إصدار المستند"
                android:fontFamily="@font/merssi_bold"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:layout_margin="7dp"
                android:padding="10dp"
                android:id="@+id/print_doc_pdf"/>
        </LinearLayout>

    </ScrollView>
